// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Setting {
  id       String @id
  settings Json   @default("{}")
}

model Tag {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  content   String
  author    String
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Ticket {
  id        Int             @id @default(autoincrement())
  category  String
  author    String
  channel   String
  messages  TicketMessage[]
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
}

model TicketMessage {
  id        Int      @id @default(autoincrement())
  ticket    Ticket   @relation(fields: [ticketId], references: [id])
  ticketId  Int
  author    String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Player {
  id        String   @id
  serverId  String
  kills     Int      @default(0)
  deaths    Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model XPSystem {
  id      String @id @unique
  xp      Int    @default(0)
  totalXp Int    @default(0)
  level   Int    @default(1)
}

model VIPUser {
  id        String   @id
  discordId String?
  chatColor String   @default("#f1c40f")
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Moderation {
  id          Int      @id @default(autoincrement())
  userId      String
  moderatorId String
  reason      String
  note        String?
  type        Int
  createdAt   DateTime @default(now())
  lastAppeal  DateTime @default(now())
  logId       String?
}